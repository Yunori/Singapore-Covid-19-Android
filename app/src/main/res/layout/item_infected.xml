<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_top_bottom"
    android:padding="10dp" >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.30" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineh2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineh3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />


    <TextView
        android:id="@+id/infected_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:textSize="20sp"
        android:lines="1"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/guidelineh2"
        app:layout_constraintEnd_toStartOf="@+id/guidelinev"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/infected_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:textSize="20sp"
        android:lines="2"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelinev"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guidelineh2" />

    <TextView
        android:id="@+id/infected_nationality"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:lines="2"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/guidelineh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guidelinev"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/infected_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:lines="2"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/guidelineh2"
        app:layout_constraintEnd_toStartOf="@+id/infected_gender"
        app:layout_constraintStart_toEndOf="@+id/guidelinev"
        app:layout_constraintTop_toBottomOf="@+id/guidelineh" />

    <TextView
        android:id="@+id/infected_gender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:lines="2"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/infected_age"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/infected_age"
        app:layout_constraintTop_toTopOf="@+id/infected_age" />

    <TextView
        android:id="@+id/infected_imported"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:lines="2"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/guidelineh3"
        app:layout_constraintEnd_toStartOf="@+id/infected_death"
        app:layout_constraintStart_toEndOf="@+id/guidelinev"
        app:layout_constraintTop_toBottomOf="@+id/guidelineh2" />

    <TextView
        android:id="@+id/infected_death"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:lines="2"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/infected_imported"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/infected_imported"
        app:layout_constraintTop_toTopOf="@+id/infected_imported" />

    <TextView
        android:id="@+id/infected_doc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:lines="2"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/infected_dod"
        app:layout_constraintStart_toEndOf="@+id/guidelinev"
        app:layout_constraintTop_toBottomOf="@+id/guidelineh3" />

    <TextView
        android:id="@+id/infected_dod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:lines="2"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/infected_doc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/infected_doc"
        app:layout_constraintTop_toTopOf="@+id/infected_doc" />
</androidx.constraintlayout.widget.ConstraintLayout>